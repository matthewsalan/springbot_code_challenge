<h1>All Restaurants:</h1>
<br />
<div class="btn btn-success btn-sm">
  <%= link_to "Lunch Idea", root_path %> 
</div>
<br />
<br />
<div class="btn btn-success btn-sm">
  <%= link_to "Add New Restaurant", new_restaurant_path %> 
</div>
<br />
<br />
<% if user_signed_in? %>
  <div class="btn btn-primary btn-sm">
    <%= link_to "Sign Out", destroy_user_session_path,  :method => :delete %>
  </div>  
  <% else %>
  
  <div class="btn btn-primary btn-sm">
    <%= link_to "Sign In", new_user_session_path, :method => :get %> 
  </div>
  <br />
  <br />
  <div class="btn btn-primary btn-sm">
    <%= link_to "Sign Up", new_user_registration_path, :method => :get %>
  </div>
<% end %>

<br />
<br />

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Restaurant</th>
    </tr>
  </thead>
  <tbody>
    <tr>
    <% @restaurants.each do |restaurant| %>
      <td><%= link_to restaurant.name, restaurant %></td>
    </tr>
  </tbody>
  <% end %>
</table>    
  






