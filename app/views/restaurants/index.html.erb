<h1>All Restaurants:</h1>
<br />

<div class="btn btn-success btn-sm">
  <%= link_to "Lunch Idea", root_path %> 
</div>

<div class="btn btn-success btn-sm">
  <%= link_to "Add New Restaurant", new_restaurant_path %> 
</div>
<% if user_signed_in? %>
  <div class="btn btn-primary btn-sm">
    <%= link_to "Sign Out", destroy_user_session_path,  :method => :delete %>
  </div>  
  <% else %>
  <div class="sign-in">
    <div class="btn btn-primary btn-sm">
      <%= link_to "Sign In", new_user_session_path, :method => :get %> 
    </div>
  </div>

  <div class="btn btn-primary btn-sm">
    <%= link_to "Sign Up", new_user_registration_path, :method => :get %>
  </div>
<% end %>

<br />
<br />

<div class="p-index">
  <p>**** Click On A Restaurant To Rate ****</p>
</div>
<div class="center-table">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Restaurant</th>
        <th>Average Rating</th>
      </tr>
    </thead>
    <tbody>
      <tr>
      <% @restaurants.each do |restaurant| %>
        <td><%= link_to restaurant.name, restaurant %></td>
        <td><%= restaurant.ratings.average(:rating).to_i %></td>
      </tr>
    </tbody>
    <% end %>
  </table>    
</div>  

